<h3>New Adoption!</h3>

<form action="/adoptions" method="post">
  <p>
  Select an Owner:
  </p>
  <p>
    <label>
      <select name="owner_id">
        <% for owner in @owners%>
        <option value="<%= owner.id %>"><%= owner.name %></option>
        <% end %>
      </select>
    </label>
  </p>

  <p>
    Select an Animal:
  </p>
  <p>
    <label>
      <select name="animal_id">
        <% for animal in @animals %>
          <% if animal.rating > 9 %>
            <% if animal.adopted.count == 0 %>
            <option value="<%= animal.id %>"><%= animal.name %></option>
            <% end %>
          <% end %>
        <% end %>
      </select>
    </label>
  </p>

  <p>
  <input type='submit' value="Send to Forever Home!">
  </p>>

</form>
