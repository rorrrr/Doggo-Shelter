<h1>Edit Adoption!</h1>

<form action="/adoptions/<%= @adoption.id %>" method="post">
  <p>
  Select an Owner:
  </p>
  <p>
    <label>
      <select name="owner_id">
        <% for owner in @owners %>
        <option value="<%= owner.id %>"><%= owner.name %></option>
        <% end %>
      </select>
    </label>
  </p>

  <p>
    Select an Animal:
  </p>
  <p>
    <label>
      <select name="animal_id">
        <% for animal in @animals %>
        <option value="<%= animal.id %>"><%= animal.name %></option>
        <% end %>
      </select>
    </label>
  </p>

  <input class="btn btn--action" type='submit' value="Change adoption details!">
</form>